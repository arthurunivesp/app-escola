{
    "version": 2,
    "builds": [
      {
        "src": "api/login.js",
        "use": "@vercel/node"
      },
      {
        "src": "index.html",
        "use": "@vercel/static"
      },
      {
        "src": "dashboard.html",
        "use": "@vercel/static"
      },
      {
        "src": "css/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "js/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "img/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/login",
        "methods": ["POST"],
        "dest": "/api/login.js"
      },
      {
        "src": "/dashboard.html",
        "dest": "/dashboard.html",
        "headers": {
          "Cache-Control": "no-cache, no-store, must-revalidate"
        }
      },
      {
        "src": "/css/(.*)",
        "dest": "/css/$1"
      },
      {
        "src": "/js/(.*)",
        "dest": "/js/$1"
      },
      {
        "src": "/img/(.*)",
        "dest": "/img/$1",
        "headers": {
          "Cache-Control": "public, max-age=31536000"
        }
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }